<% url, method = @team.id.nil? ? [calendars_admin_teams_path, :post] : [calendars_admin_team_path(@team), :put] %>

<%= form_for(@team, url: url, html: { method: method }) do |f| %>
  <% if @team.errors.any? %>
    <div id="error_explanation">
      <h2>Corrija os seguintes <%= pluralize(@team.errors.count, "erro") %>:</h2>

      <ul>
      <% @team.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>

    <label>Gestores</label>
    <% User.all.each do |user| %>
      <%= "#{user.name} (#{user.email})" %>
      <%= check_box_tag 'manager_ids[]', user.id, team.is_manager?(user) ? true : false %>
    <% end %>

    <label>Membros</label>
    <% User.all.each do |user| %>
      <%= "#{user.name} (#{user.email})" %>
      <%= check_box_tag 'manager_ids[]', user.id, team.is_member?(user) ? true : false %>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit 'Criar equipa' %>
  </div>
<% end %>
